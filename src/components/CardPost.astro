---
export interface Props {
    title: string;
    excerpt: string;
    image: string;
    index: number;
    slug: string;
}

const { title, excerpt, image, index, slug } = Astro.props;
---

<button id="landing" class="text-left cursor-pointer" data-index={index}
onclick={`window.open('/article/${slug}', '_self')`}>
    <div class="mb-4 overflow-hidden bg-blue-300 aspect-[3/2] rounded-2xl">
        <img src={image} alt={title} class="object-cover w-full h-full" />
    </div>
    <div class="mb-4">
        <h4 class="mb-2 text-xl font-semibold line-clamp-2">{title}</h4>
        <p class="font-light line-clamp-2">{excerpt}</p>
        <h6 class="mt-2 text-lg text-blue-500 hover:underline">Lanjut baca â†’</h6>
    </div>
</button>