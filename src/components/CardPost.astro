---
export interface Props {
  title: string;
  excerpt: string;
  image: string;
  index: number;
}

const { title, excerpt, image, index } = Astro.props;
---

<button class="text-left cursor-pointer" data-index={index}
onclick={`document.querySelector('[data-index="m-${index}"]').classList.remove('hidden')`}>
  <div class="mb-4 overflow-hidden bg-blue-300 aspect-[3/2] rounded-2xl">
    <img src={image} alt={title} class="object-cover w-full h-full" />
  </div>
  <div class="mb-4">
    <div class="mb-2 text-xl font-semibold line-clamp-2">{title}</div>
    <div class="font-light line-clamp-2">{excerpt}</div>
    <div class="mt-2 text-lg text-blue-500 hover:underline">Lanjut baca â†’</div>
  </div>
</button>